<!DOCTYPE html>
<html>
<head>
	<% include templates/head %>

	<!-- Custom styles for this template -->
	<link rel='stylesheet' href='/stylesheets/register.css' />
</head>
<body>
	<div>
		<div>
			<% include templates/navigationbar %>
		</div>
		 
		<div class="container container-custom">
			
			<div class="panel panel-default panel-custom">
			  <div class="panel-heading panel-heading-custom">
			    <h3 class="modal-title">Please Register</h3>
			  </div>
			  <div class="panel-body">
			  	<form role="form" action="/user/register" method="post">
					
					<div class="row row-custom">
					  <div class="col-md-4">
					  	<label class="lable-custom" for="email">Email:</label>					  	
					  </div>
					  <div class="col-md-8">
					  	<input id="email" name="user[email]" type="email" class="form-control" required autofocus/>
					  </div>
					</div>

					<div class="row row-custom">
					  <div class="col-md-4">
					  	<label class="lable-custom" for="userName">Your Name:</label>					  	
					  </div>
					  <div class="col-md-8">
					  	<input id="userName" name="user[userName]" type="text" class="form-control" autofocus/>
					  </div>
					</div>

					<div class="row row-custom">
					  <div class="col-md-4">
					  	<label class="lable-custom" for="password">Password:</label>
					  </div>
					  <div class="col-md-8">
					  	<input id="password" type="password" name="user[password]" class="form-control" required/>
					  </div>
					</div>

					<div class="row row-custom">
					  <div class="col-md-4">
					  	<label class="lable-custom" for="password">Confirm Password:</label>
					  </div>
					  <div class="col-md-8">
					  	<input id="confirmPassword" type="password" class="form-control" required/>
					  </div>
					</div>

					<div class="row row-custom">
						<div class="col-md-4">							
						</div>
						<div class="col-md-8">
							<input type="checkbox" value="agreeLicense">
								<span>Agree with the SQL Optimizer </span>
								<a href="/privacy">Privacy Policy</a>
							</input>
						</div>
					</div>
			  	  	
			  	  	<div class="row row-custom">
			  	  		<div class="col-md-4">							
			  	  		</div>
			  	  		<div class="col-md-8">
			  	  			<button class="btn btn-primary" data-loading-text="Register..." autocomplete="off" type="submit">Submit</button>
			  	  		</div>
			  	  	</div>
			  	  
			  	</form>
			  </div>
			</div>

	    </div> <!-- /container -->
		
		<div>
			<% include templates/footer %>
		</div>
	</div>

	<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
	<script src="/libs/jquery/dist/jquery.min.js"></script>
	<!-- Include all compiled plugins (below), or include individual files as needed -->
	<script src="/libs/bootstrap/dist/js/bootstrap.min.js"></script>

	<script src="/libs/seajs/dist/sea.js"></script>

	<% include templates/body-end %>
</body>
</html>